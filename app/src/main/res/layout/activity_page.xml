<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.FixedDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    tools:context=".page.PageActivity">

    <org.wikipedia.views.FrameLayoutNavMenuTriggerer
        android:id="@+id/activity_page_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/transition_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?paper_color"
            android:orientation="vertical">

            <org.wikipedia.views.FaceAndColorDetectImageView
                android:id="@+id/transition_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="192dp"
                android:transitionName="@string/transition_article_image"
                android:contentDescription="@null"
                app:layout_constraintTop_toBottomOf="@id/view_featured_article_card_header"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/transition_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="serif"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="3"
                    android:paddingTop="14.5dp"
                    android:textColor="?attr/primary_text_color"
                    android:textSize="23.3sp"
                    android:transitionName="@string/transition_article_title"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Lorem ipsum" />

                <org.wikipedia.views.GoneIfEmptyTextView
                    android:id="@+id/transition_description_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:paddingTop="1dp"
                    android:paddingBottom="5dp"
                    android:lineSpacingMultiplier="1.1"
                    android:textColor="?attr/secondary_text_color"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:transitionName="@string/transition_article_description"
                    app:layout_constraintTop_toBottomOf="@id/transition_title_view"
                    tools:text="Lorem ipsum" />

                <View
                    android:layout_width="@dimen/divider_width_for_article"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:background="?attr/material_theme_border_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/transition_description_view"
                    app:layout_constraintBottom_toTopOf="@id/transition_summary_view"/>

                <TextView
                    android:id="@+id/transition_summary_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.3"
                    android:maxLines="8"
                    android:paddingTop="10dp"
                    android:paddingBottom="16dp"
                    android:textColor="?attr/primary_text_color"
                    android:textSize="14sp"
                    android:transitionName="@string/transition_article_summary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="Lorem ipsum" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/page_fragment"
            android:name="org.wikipedia.page.PageFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_page" />

        <FrameLayout
            android:id="@+id/page_toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/paper_color"
            android:elevation="4dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/page_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end">

                    <org.wikipedia.views.TabCountsView
                        android:id="@+id/page_toolbar_button_tabs"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/menu_page_show_tabs" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/page_toolbar_button_show_overflow_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/menu_feed_overflow_label"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/ic_more_vert_themed_24dp"
                        app:tint="?attr/toolbar_icon_color" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <ProgressBar
                android:id="@+id/page_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="-7dp"
                android:indeterminate="true" />

        </FrameLayout>

    </org.wikipedia.views.FrameLayoutNavMenuTriggerer>

    <FrameLayout
        android:id="@+id/toc_container"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="?android:colorBackground"
        tools:visibility="visible">

        <org.wikipedia.views.SwipeableListView
            android:id="@+id/toc_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:listSelector="?android:attr/selectableItemBackground"
            android:paddingTop="64dp"
            android:paddingBottom="64dp"
            android:scrollbars="none" />

        <ImageView
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="-4dp"
            android:contentDescription="@null"
            android:layerType="software"
            android:src="@drawable/toc_dotted_line" />

        <org.wikipedia.views.PageScrollerView
            android:id="@+id/page_scroller_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@drawable/shape_circle"
            android:clickable="true"
            android:elevation="8dp"
            android:focusable="true"
            android:scaleType="center"
            app:backgroundTint="?attr/toc_scroller_button_color"
            app:srcCompat="@drawable/ic_unfold_more_black_24dp"
            app:tint="?attr/colorAccent" />

    </FrameLayout>

</androidx.drawerlayout.widget.FixedDrawerLayout>
